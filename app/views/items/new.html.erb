<h1>List Item</h1>


<%= form_for :item, url: items_path do |f| %>
	<p>
		<%= f.label :title %>
		<br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :start_price %>
		<br>
		<%= f.number_field :start_price %>
	</p>

	<p>
		<%= f.label "'Buy it now' Price" %>
		<br>
		<%= f.number_field :bit_price %>
	</p>

	<p>
		<%= f.label :end_date %>
		<br>
		<%= f.datetime_select :end_date %>
	</p>

	<p>
		<%= f.submit %>
	</p>
	
<% end %>

